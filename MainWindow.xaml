<Window x:Class="HocrEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:HocrEditor.Controls"
        xmlns:viewModels="clr-namespace:HocrEditor.ViewModels"
        mc:Ignorable="d"
        Title="hOCR Editor"
        Height="1080"
        Width="1920"
        d:DataContext="{d:DesignInstance viewModels:MainWindowViewModel}">
    <Window.InputBindings>
        <KeyBinding Key="Delete"
                    Command="{Binding DeleteCommand}"
                    CommandParameter="{Binding Document.SelectedNodes, FallbackValue={x:Null}}" />
        <KeyBinding Modifiers="Control"
                    Key="M"
                    Command="{Binding MergeCommand}"
                    CommandParameter="{Binding Document.SelectedNodes, FallbackValue={x:Null}}" />
        <KeyBinding Modifiers="Control+Shift"
                    Key="A"
                    Command="{Binding SelectIdenticalNodesCommand}"
                    CommandParameter="{Binding Document.SelectedNodes, FallbackValue={x:Null}}" />
        <KeyBinding Modifiers="Control"
                    Key="Z"
                    Command="{Binding UndoCommand}" />
        <KeyBinding Modifiers="Control"
                    Key="Y"
                    Command="{Binding RedoCommand}" />
        <KeyBinding Modifiers="Control+Shift"
                    Key="Z"
                    Command="{Binding RedoCommand}" />
    </Window.InputBindings>
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Open..." />
                <MenuItem Header="_Save..." />
                <Separator />
                <MenuItem Header="E_xit" />
            </MenuItem>
            <MenuItem Header="_Edit">
                <MenuItem Header="_Undo"
                          Command="{Binding UndoCommand}" />
                <MenuItem Header="_Redo"
                          Command="{Binding RedoCommand}" />
                <Separator />
                <MenuItem Header="_Delete"
                          Command="{Binding DeleteCommand}"
                          CommandParameter="{Binding Document.SelectedNodes, FallbackValue={x:Null}}" />
                <MenuItem Header="_Merge"
                          Command="{Binding MergeCommand}"
                          CommandParameter="{Binding Document.SelectedNodes, FallbackValue={x:Null}}" />
                <MenuItem Header="_Crop"
                          Command="{Binding CropCommand}"
                          CommandParameter="{Binding Document.SelectedNodes, FallbackValue={x:Null}}" />
                <Separator />

                <MenuItem Header="_Select Identical Nodes"
                          Command="{Binding SelectIdenticalNodesCommand}"
                          CommandParameter="{Binding Document.SelectedNodes, FallbackValue={x:Null}}" />
                <MenuItem Header="Convert Nodes to _Image"
                          Command="{Binding ConvertToImageCommand}"
                          CommandParameter="{Binding Document.SelectedNodes, FallbackValue={x:Null}}" />
            </MenuItem>
        </Menu>
        <ToolBarTray DockPanel.Dock="Top">
            <ToolBar>
                <Button Content="Import"
                        Click="Button_OnClick" />
                <Button Content="Open" />
            </ToolBar>
            <ToolBar>
                <Button Content="Undo"
                        Command="{Binding UndoCommand}" />
                <Button Content="Redo"
                        Command="{Binding RedoCommand}" />
                <Separator />
                <Button Content="Delete"
                        Command="{Binding DeleteCommand}"
                        CommandParameter="{Binding Document.SelectedNodes, FallbackValue={x:Null}}" />
                <Button Content="Merge"
                        Command="{Binding MergeCommand}"
                        CommandParameter="{Binding Document.SelectedNodes, FallbackValue={x:Null}}" />
                <Button Content="Crop"
                        Command="{Binding CropCommand}"
                        CommandParameter="{Binding Document.SelectedNodes, FallbackValue={x:Null}}" />
                <ToggleButton Content="Auto Crop"
                              IsChecked="{Binding AutoCrop}" />
                <Separator />
                <Button Content="Select Identical Nodes"
                        Command="{Binding SelectIdenticalNodesCommand}"
                        CommandParameter="{Binding Document.SelectedNodes, FallbackValue={x:Null}}" />
                <Button Content="Convert Nodes to Image"
                        Command="{Binding ConvertToImageCommand}"
                        CommandParameter="{Binding Document.SelectedNodes, FallbackValue={x:Null}}" />
            </ToolBar>
        </ToolBarTray>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="300" />
            </Grid.ColumnDefinitions>
            <controls:DocumentCanvas Grid.Column="0"
                                     ItemsSource="{Binding Document.Nodes, FallbackValue={x:Null}}"
                                     SelectedItems="{Binding Document.SelectedNodes, FallbackValue={x:Null}}"
                                     NodesChanged="Canvas_OnNodesChanged"
                                     SelectionChanged="Canvas_OnSelectionChanged" />
            <controls:DocumentTreeView Grid.Column="1"
                                       ItemsSource="{Binding Document.Nodes[0].Children, FallbackValue={x:Null}}"
                                       SelectedItems="{Binding Document.SelectedNodes, FallbackValue={x:Null}}"
                                       NodeEdited="DocumentTreeView_OnNodeEdited" />
        </Grid>
    </DockPanel>
</Window>
