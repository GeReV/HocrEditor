<Window x:Class="HocrEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:HocrEditor.Controls"
        xmlns:viewModels="clr-namespace:HocrEditor.ViewModels"
        xmlns:converters="clr-namespace:HocrEditor.Converters"
        xmlns:dd="urn:gong-wpf-dragdrop"
        mc:Ignorable="d"
        Title="hOCR Editor"
        Height="1080"
        Width="1920"
        d:DataContext="{d:DesignInstance viewModels:MainWindowViewModel}">
    <Window.Resources>
        <converters:BooleanNegateConverter x:Key="NegateConverter" />
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Window.Resources>
    <Window.InputBindings>
        <!-- Editing keybindings -->
        <KeyBinding Key="Delete"
                    Command="{Binding Document.CurrentPage.DeleteCommand}"
                    CommandParameter="{Binding Document.CurrentPage.SelectedNodes, FallbackValue={x:Null}}" />
        <KeyBinding Modifiers="Control"
                    Key="M"
                    Command="{Binding Document.CurrentPage.MergeCommand}"
                    CommandParameter="{Binding Document.CurrentPage.SelectedNodes, FallbackValue={x:Null}}" />

        <!-- Selection keybindings -->
        <KeyBinding Modifiers="Control"
                    Key="A"
                    Command="{Binding Document.CurrentPage.ExclusiveSelectNodesCommand}"
                    CommandParameter="{Binding Document.CurrentPage.Nodes, FallbackValue={x:Null}}" />
        <KeyBinding Modifiers="Control"
                    Key="D"
                    Command="{Binding Document.CurrentPage.DeselectNodesCommand}"
                    CommandParameter="{Binding Document.CurrentPage.SelectedNodes, FallbackValue={x:Null}}" />
        <KeyBinding Modifiers="Control+Shift"
                    Key="A"
                    Command="{Binding Document.CurrentPage.SelectIdenticalNodesCommand}"
                    CommandParameter="{Binding Document.CurrentPage.SelectedNodes, FallbackValue={x:Null}}" />

        <!-- Navigation keybindings -->
        <KeyBinding Modifiers="Control"
                    Key="PageDown"
                    Command="{Binding Document.NextPageCommand}" />
        <KeyBinding Modifiers="Control"
                    Key="PageUp"
                    Command="{Binding Document.PreviousPageCommand}" />

        <!-- Undo-redo keybindings -->
        <KeyBinding Modifiers="Control"
                    Key="Z"
                    Command="{Binding Document.CurrentPage.UndoCommand}" />
        <KeyBinding Modifiers="Control"
                    Key="Y"
                    Command="{Binding Document.CurrentPage.RedoCommand}" />
        <KeyBinding Modifiers="Control+Shift"
                    Key="Z"
                    Command="{Binding Document.CurrentPage.RedoCommand}" />
    </Window.InputBindings>
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Open..." />
                <MenuItem Header="_Save..." />
                <Separator />
                <MenuItem Header="E_xit" />
            </MenuItem>
            <MenuItem Header="_Edit">
                <MenuItem Header="_Undo"
                          Command="{Binding Document.CurrentPage.UndoCommand}" />
                <MenuItem Header="_Redo"
                          Command="{Binding Document.CurrentPage.RedoCommand}" />
                <Separator />
                <MenuItem Header="_Delete"
                          Command="{Binding Document.CurrentPage.DeleteCommand}"
                          CommandParameter="{Binding Document.CurrentPage.SelectedNodes, FallbackValue={x:Null}}" />
                <MenuItem Header="_Merge"
                          Command="{Binding Document.CurrentPage.MergeCommand}"
                          CommandParameter="{Binding Document.CurrentPage.SelectedNodes, FallbackValue={x:Null}}" />
                <MenuItem Header="_Crop"
                          Command="{Binding Document.CurrentPage.CropCommand}"
                          CommandParameter="{Binding Document.CurrentPage.SelectedNodes, FallbackValue={x:Null}}" />
                <Separator />

                <MenuItem Header="C_onvert Nodes to Image"
                          Command="{Binding Document.CurrentPage.ConvertToImageCommand}"
                          CommandParameter="{Binding Document.CurrentPage.SelectedNodes, FallbackValue={x:Null}}" />
            </MenuItem>
            <MenuItem Header="_Select">
                <MenuItem Header="_All"
                          Command="{Binding Document.CurrentPage.ExclusiveSelectNodesCommand}"
                          CommandParameter="{Binding Document.CurrentPage.Nodes, FallbackValue={x:Null}}" />
                <MenuItem Header="Deselect A_ll"
                          Command="{Binding Document.CurrentPage.DeselectNodesCommand}"
                          CommandParameter="{Binding Document.CurrentPage.SelectedNodes, FallbackValue={x:Null}}" />
                <MenuItem Header="Inve_rse" />
                <MenuItem Header="_Identical Nodes"
                          Command="{Binding Document.CurrentPage.SelectIdenticalNodesCommand}"
                          CommandParameter="{Binding Document.CurrentPage.SelectedNodes, FallbackValue={x:Null}}" />
            </MenuItem>
        </Menu>
        <ToolBarTray DockPanel.Dock="Top">
            <ToolBar>
                <Button Content="Import"
                        Click="Button_OnClick" />
                <Button Content="Open" />
            </ToolBar>
            <ToolBar>
                <Button Content="Undo"
                        Command="{Binding Document.CurrentPage.UndoCommand}" />
                <Button Content="Redo"
                        Command="{Binding Document.CurrentPage.RedoCommand}" />
                <Separator />
                <Button Content="Delete"
                        Command="{Binding Document.CurrentPage.DeleteCommand}"
                        CommandParameter="{Binding Document.CurrentPage.SelectedNodes, FallbackValue={x:Null}}" />
                <Button Content="Merge"
                        Command="{Binding Document.CurrentPage.MergeCommand}"
                        CommandParameter="{Binding Document.CurrentPage.SelectedNodes, FallbackValue={x:Null}}" />
                <Button Content="Crop"
                        Command="{Binding Document.CurrentPage.CropCommand}"
                        CommandParameter="{Binding Document.CurrentPage.SelectedNodes, FallbackValue={x:Null}}" />
                <ToggleButton Content="Auto Clean"
                              IsChecked="{Binding AutoClean}" />
                <Separator />
                <Button Content="Select Identical Nodes"
                        Command="{Binding Document.CurrentPage.SelectIdenticalNodesCommand}"
                        CommandParameter="{Binding Document.CurrentPage.SelectedNodes, FallbackValue={x:Null}}" />
                <Button Content="Convert Nodes to Image"
                        Command="{Binding Document.CurrentPage.ConvertToImageCommand}"
                        CommandParameter="{Binding Document.CurrentPage.SelectedNodes, FallbackValue={x:Null}}" />
            </ToolBar>
        </ToolBarTray>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="170" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="300" />
            </Grid.ColumnDefinitions>
            <ListBox Grid.Column="0"
                     SelectedIndex="0"
                     ItemsSource="{Binding Document.PagesCollectionView}"
                     IsSynchronizedWithCurrentItem="True"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                     ScrollViewer.VerticalScrollBarVisibility="Visible"
                     dd:DragDrop.IsDragSource="True"
                     dd:DragDrop.IsDropTarget="True"
                     dd:DragDrop.DragDropContext="PagesDragDrop"
                     dd:DragDrop.SelectDroppedItems="True">
                <ListBox.Resources>
                    <Style TargetType="ListBoxItem"
                           d:DataContext="{d:DesignInstance viewModels:HocrPageViewModel}">
                        <Setter Property="IsEnabled"
                                Value="{Binding IsProcessing, Converter={StaticResource NegateConverter}}" />
                    </Style>
                </ListBox.Resources>
                <ListBox.ItemTemplate>
                    <DataTemplate DataType="viewModels:HocrPageViewModel">
                        <Border Margin="5">
                            <Grid>
                                <Image Name="PagePreview"
                                       Source="{Binding Image}"
                                       Stretch="Uniform"
                                       StretchDirection="DownOnly"
                                       RenderOptions.BitmapScalingMode="HighQuality" />
                                <ProgressBar VerticalAlignment="Bottom"
                                             IsIndeterminate="True"
                                             Visibility="{Binding IsProcessing, Converter={StaticResource BooleanToVisibilityConverter}}" />
                            </Grid>
                        </Border>
                        <DataTemplate.Triggers>
                            <DataTrigger Binding="{Binding IsProcessing}"
                                         Value="True">
                                <Setter TargetName="PagePreview"
                                        Property="Opacity"
                                        Value="0.2" />
                            </DataTrigger>
                        </DataTemplate.Triggers>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <controls:DocumentCanvas Grid.Column="1"
                                     Margin="-1, 0"
                                     ItemsSource="{Binding  Document.CurrentPage.Nodes, FallbackValue={x:Null}}"
                                     SelectedItems="{Binding Document.CurrentPage.SelectedNodes, FallbackValue={x:Null}}"
                                     NodesChanged="Canvas_OnNodesChanged"
                                     SelectionChanged="Canvas_OnSelectionChanged" />
            <controls:DocumentTreeView Grid.Column="2"
                                       ItemsSource="{Binding Document.CurrentPage.Nodes[0].Children, FallbackValue={x:Null}}"
                                       SelectedItems="{Binding Document.CurrentPage.SelectedNodes, FallbackValue={x:Null}}"
                                       NodesEdited="DocumentTreeView_OnNodeEdited"
                                       NodesMoved="DocumentTreeView_OnNodesMoved" />
        </Grid>
    </DockPanel>
</Window>
