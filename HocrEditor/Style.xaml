<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:HocrEditor.Controls"
                    xmlns:hocrEditor="clr-namespace:HocrEditor">
    <Style TargetType="hocrEditor:MainWindow">
        <Setter Property="FontSize" Value="12" />
    </Style>

    <Style TargetType="MenuItem">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Padding" Value="6,3,6,3" />
    </Style>

    <Style TargetType="controls:TitledPanel"
           BasedOn="{StaticResource {x:Type controls:TitledPanel}}">
    </Style>

    <Style TargetType="controls:ZoomPanControl">
        <Setter Property="BorderBrush" Value="{x:Static SystemColors.ControlDarkBrush}" />
        <Setter Property="BorderThickness" Value="1" />
    </Style>

    <Style TargetType="TabControl">
        <Setter Property="BorderThickness" Value="0"></Setter>
        <Setter Property="Padding" Value="0" />
    </Style>

    <Style TargetType="TabItem">
        <Setter Property="Padding" Value="6" />
    </Style>
</ResourceDictionary>
