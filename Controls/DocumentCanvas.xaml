<UserControl
    Focusable="True"
    d:DataContext="{d:DesignInstance viewModels:MainWindowViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="HocrEditor.Controls.DocumentCanvas"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="clr-namespace:HocrEditor.Helpers"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:HocrEditor.Models"
    xmlns:skia="clr-namespace:SkiaSharp.Views.WPF;assembly=SkiaSharp.Views.WPF"
    xmlns:viewModels="clr-namespace:HocrEditor.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Border BorderBrush="{x:Static SystemColors.ControlDarkBrush}" BorderThickness="1">
            <skia:SKElement Name="Surface" PaintSurface="Canvas_OnPaintSurface" />
        </Border>
        <Canvas Name="TextBoxLayout">
            <TextBox
                KeyDown="TextBox_OnKeyDown"
                LostFocus="TextBox_OnLostFocus"
                Name="TextBox"
                TextAlignment="Center"
                TextBlock.LineStackingStrategy="BlockLineHeight"
                Visibility="Collapsed" />
            <Border
                Background="#EEF5FD"
                Cursor="Arrow"
                Name="SelectionPopup"
                Padding="2"
                SnapsToDevicePixels="True">
                <Border.Resources>
                    <Style BasedOn="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" TargetType="Button" />
                    <Style BasedOn="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" TargetType="Separator" />
                    <Style TargetType="Image">
                        <Setter Property="SnapsToDevicePixels" Value="True" />
                        <Setter Property="RenderOptions.BitmapScalingMode" Value="NearestNeighbor" />
                    </Style>
                </Border.Resources>
                <StackPanel Orientation="Horizontal">
                    <Button
                        Command="{x:Static viewModels:HocrDocumentViewModel.OcrRegionCommand}"
                        CommandParameter="{Binding SelectionBounds, RelativeSource={RelativeSource AncestorType=UserControl}, FallbackValue={x:Static models:Rect.Empty}}"
                        ToolTip="Perform OCR on selection"
                        helpers:IconButton.Source="/Icons/spectacle.png">
                        OCR Region
                    </Button>
                    <Separator />
                    <ItemsControl ItemsSource="{x:Static viewModels:HocrNodeTypeViewModel.CreatableNodeTypes}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="viewModels:HocrNodeTypeViewModel">
                                <Button
                                    Command="{x:Static viewModels:HocrDocumentViewModel.CreateNodeCommand}"
                                    CommandParameter="{Binding NodeType}"
                                    ToolTip="{Binding ToolTip}">
                                    <Canvas Height="16" Width="16">
                                        <Image Source="{Binding IconPath}" />
                                        <Image
                                            Canvas.Left="8"
                                            Canvas.Top="8"
                                            Source="/Icons/plus-small.png" />
                                    </Canvas>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>
        </Canvas>
    </Grid>
</UserControl>
